@import 'partials/variables.styl'
@import 'partials/mixins.styl'

@import '../../../node_modules/nib/'

normalize-css()

::-webkit-scrollbar
  width .6em
  
::-webkit-scrollbar-thumb
  background lighten(black, 10%)
  transition 1s all

::-webkit-scrollbar-track
  background lighten(black, 60%)


*
  box-sizing border-box

header, a, img, svg, span
  border-dev()

img
  width 100%
  height 100%