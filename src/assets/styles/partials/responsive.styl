// Extra small devices (portrait phones, less than 576px)
@media (max-width: 575px)
    .superFold
        background-image url(../img/background-lasvegas-576px.jpg)
    .superFold__title
        font-size 14vw
    .superFold__subtitle
        font-size 4vw
    .superFold__link
        font-size 1.5em
    .superFold
        grid-template-areas "header header header" "header header header" "header header header" "footer footer footer "
        background-image url(../img/background-lasvegas-576px.jpg)
    .superFold__menu
        flex-wrap wrap
    .superFold__item
        width 50%

// Small devices (landscape phones, 576px and up)
@media (min-width: 576px) and (max-width: 767px)
    .superFold
        background-image url(../img/background-lasvegas-768px.jpg)
    .superFold__title
        font-size 14vw
    .superFold__subtitle
        font-size 2.5vw
    .superFold__link
        font-size 1.8em
    .superFold
        grid-template-areas "header header header" "header header header" "header header header" "footer footer footer "
        background-image url(../img/background-lasvegas-576px.jpg)
    .superFold__menu
        flex-wrap wrap
    .superFold__item
        width 50%

// Medium devices (tablets, 768px and up)
@media (min-width: 768px) and (max-width: 991px)
    .superFold
        background-image url(../img/background-lasvegas-992px.jpg)
    .superFold__title
        font-size 14vw
    .superFold__subtitle
        font-size 2.2vw
    .superFold__link
        font-size 1.8em
    .superFold
        grid-template-areas "header header header" "header header header" "header header header" "footer footer footer "
        background-image url(../img/background-lasvegas-576px.jpg)
    .superFold__menu
        flex-wrap wrap
    .superFold__item
        width 50%

// Large devices (desktops, 992px and up)
@media (min-width: 992px) and (max-width: 1199px)
    .superFold
        background-image url(../img/background-lasvegas-1200px.jpg)

// Extra large devices (large desktops, 1200px and up)
@media (min-width: 1200px)
    .superFold
        background-image url(../img/background-lasvegas-1920px.jpg)