.superFold
    min-width 100%
    height 100vh
    overflow hidden
    position relative
    display grid
    grid-template-columns repeat(5, 1fr)
    grid-template-rows repeat(5, 1fr)
    grid-gap 20px
.superFold__video
    overflow hidden
    position absolute
    z-index -2
    top 0
    left 0
    width 100vw
.superFold__overlay
    overflow hidden
    position absolute
    z-index -1
    top 0
    left 0
    width 100vw
    height 100vh
    background $color__four
    opacity .4
.superFold__header
    display flex
    grid-column 2 / 5
    grid-row 2 / 4
    position relative
    flex-direction column
    justify-content center
    align-items center
    &:before
       content " "
       width 80%
       height 5px
       background $color__one
       position absolute
       bottom -5px
       left 10%
.superFold__title
    font-family 'Futura Md BT', 'Arial', sans-serif
    font-size 130px
    text-align center
    color $color__one
    text-shadow 4px 4px 0 $color__five
    margin 0 auto
.superFold__subtitle
    font-family 'Futura Md BT', 'Arial', sans-serif
    font-size 20px
    text-align center
    margin 0 auto
    color $color__one
.superFold__menu
    grid-column 2 / 5
    grid-row 5 / 6
    list-style none
    margin 0
    padding 0
    display flex
    flex-direction row
    align-items center
    justify-content space-between
.superFold__link
    font-family 'Futura Md BT', 'Arial', sans-serif
    color $color__five
    text-decoration none
    font-size 2em
    font-variant small-caps
    transition .2s ease-in-out color
    &:hover
        color $color__one