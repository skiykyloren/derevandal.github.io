.superFold
    min-width 100%
    height 100vh
    overflow hidden
    position relative
    display grid
    grid-template-columns repeat(5, 1fr)
    grid-template-rows repeat(5, 1fr)
    grid-gap 20px
.superFold__video
    overflow hidden
    position absolute
    z-index -2
.superFold__title
    display flex
    grid-column 2 / 5
    grid-row 2 / 5
    font-family 'Futura Md BT', 'Arial', sans-serif
    font-size 8.5em
    text-align center
    color $color__one
    text-shadow 2px 2px 0px $color__five
.superFold__menu
    grid-column 2 / 5
    grid-row 5 / 6
    list-style none
    margin 0
    padding 0